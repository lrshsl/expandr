|--------------------------------|
|        Mappings Section        |
|--------------------------------|

map doctype => '<!DOCTYPE html>'

map language [lang] => '<head lang="[lang]">'

map head [title] =>
	''''
<head>
	 <meta charset="UTF-8">
	 <meta name="viewport" content="width=device-width, initial-scale=1.0">
	 <title>[title]</title>
</head>
	''''

map tag [tag] [child] =>
	''''
<[tag]>
	[child]
</[tag]>
	''''

|--------------------------------|
|      Application Section       |
|--------------------------------|

[doctype]
[language 'en']
[head 'Example exr-html']
[tag 'body' [tag 'div' [tag 'h1' 'Title is here']]]


| vim: ft=exr
